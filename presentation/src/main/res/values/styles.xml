<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_normal">
        <item name="android:fontFamily">@font/custom_font</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="textViewChristmas">
        <item name="android:fontFamily">@font/caviar_dreams_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textViewChristmasAnswer">
        <item name="android:fontFamily">@font/caviar_dreams_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textAnswers">
        <item name="android:fontFamily">@font/caviar_dreams_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
